{
  "name": "aurastream",
  "version": "0.1.0",
  "private": true,
  "packageManager": "npm@10.2.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:e2e": "playwright test --config apps/web/e2e/playwright.config.ts",
    "test:e2e:smoke": "playwright test --config apps/web/e2e/playwright.config.ts smoke/",
    "clean": "turbo clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/react": "^14.1.0",
    "@vitest/coverage-v8": "^1.0.0",
    "fast-check": "^3.15.0",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.0",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18"
  }
}
