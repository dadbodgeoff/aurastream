# =============================================================================
# AuraStream Web - Environment Variables
# =============================================================================
# Copy this file to .env.local for local development
# Set these in your deployment platform (Vercel, etc.) for production

# -----------------------------------------------------------------------------
# Supabase Configuration (Required)
# -----------------------------------------------------------------------------
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key

# -----------------------------------------------------------------------------
# API Configuration (Required)
# -----------------------------------------------------------------------------
# Backend API URL - set to your deployed backend URL in production
NEXT_PUBLIC_API_URL=http://localhost:8001

# -----------------------------------------------------------------------------
# App Configuration
# -----------------------------------------------------------------------------
# Your production domain
NEXT_PUBLIC_APP_URL=https://aurastream.shop

# -----------------------------------------------------------------------------
# Feature Flags (Optional)
# -----------------------------------------------------------------------------
# Enable dev logging (set to 'true' only for debugging)
NEXT_PUBLIC_DEV_LOGS=false
